                <% categories.docs.forEach((cate)=> { %>
                    <% if(cate.data().title==data.category){%>
                        <option selected value="<%=cate.data().title%>">
                            <%=cate.data().title%>
                        </option>
                   <% }else{%>
                        <option value="<%=cate.data().title%>">
