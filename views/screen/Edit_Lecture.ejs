<div class="container">
<br><br>

<form action="/screen/Edit_Lecture" enctype="multipart/form-data" method="post">
    <input type="hidden" name='id' value="<%=id%>">
    <h3>Edit Lecture</h3>
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title" value='<%=title%>' placeholder="<%=title%>..." required>
        <input type="hidden" class="form-control" name="sec_id" value='<%=sec_id%>' >
    </div>
    <div class="form-group">
        <label for="">Upload Thumbnail </label><br>
        <input type="file" name="thumbnailUrl" >
    </div>
    
    <div class="form-group">
        <label for="">Upload VideoUrl </label><br>
        <input type="file" name="lectureVideoUrl" >
    </div>
   
    <button type="submit" class="btn btn-success">Upload</button>
    <br><br>
    <a type="submit" href='/screen/GetCourses' class="btn btn-danger">cancel</a>
</form>




</div>