<div class="container">
    <a href="/screen/GetSection/<%=id%>/<%=sectionId%>/<%=title%>" type='button' class="btn btn-dark">Back to Lecture</a>
    <br>
    <br>
    <br>
<h2 style="text-align:
center;background-color:rgba(216, 41, 216, 0.747);color:white;padding:20px;;text-transform: uppercase;"><%=title%></h2>
<br>
<br><br>    <h2>Quiz Section</h2>
<hr style="width:20%" class="float-left"><br><br>
<div class="card w-80" >

<ul class="list-group list-group-flush">
    
    <% data.forEach((doc)=>{%>
    <li class="list-group-item"  style='background:rgb(244, 243, 243)'>
       
        <div class="card w-100" style='background:rgb(238, 230, 230);'>
         
          <div class="row row-cols-1 row-cols-md-6 row-cols-lg-12">
           
                
            <div class="col-sm-12 col-mb-3 col-md-6">
  
              <div class="card w-80" style="padding:5px">
                <% let str = doc.options %>
                <%  let ready=str.split(",").join("<br/>"); %>
                <span style='font-size:16px;font-weight: bold;'>Question: <%=doc.question %></span> <br>
                <span style='font-size:16px;font-weight: bold;'>Options:</span>
                <span><br>  <%-ready%></span> <br>
                <span style='font-size:16px;font-weight: bold;'>Answer:  <%=doc.answer%></span> 
                
                <span class="float-right">
                    
                  <br>
                    <!-- delete -->
                    <a href="/screen/deleteQuiz/<%=id%>/<%=doc.id%>/<%=sectionId%>/<%=title%>"style="margin:5px"  type="button" class='btn btn-danger'>Delete Quiz</a>
                    
                    <!-- <a type="button" class="btn btn-primary " style="margin:5px" data-toggle="modal" data-target="#<%=doc.id%>">
                      view Thumbnails
                    </a>  -->
                    
                </span>
              </div>
              <br>
          </div>
          <!-- thumbnail cards -->
            <div class="col-sm-12 col-mb-3 col-md-6">
  
              <div class="card w-80">
                  <img class="card-img-top" width='250px' height='250px' src="<%=doc.qThumbnail%>"
                      alt="intro video thumbnail">
                  <div class="card-body">
                      <h4 class="card-text text-center text-muted">Question Thumbnail</h4>
                     
                  </div>
              </div>
              <br>
          </div>
            <div class="col-sm-12 col-mb-3 col-md-6">
  
              <div class="card w-80">
                  <img class="card-img-top" width='250px' height='250px' src="<%=doc.o1%>"
                      alt="intro video thumbnail">
                  <div class="card-body">
                      <h4 class="card-text text-center text-muted">Option1 Thumbnail</h4>
                     
                  </div>
              </div>
              <br>
          </div>
            <div class="col-sm-12 col-mb-3 col-md-6">
  
              <div class="card w-80">
                  <img class="card-img-top" width='250px' height='250px' src="<%=doc.o2%>"
                      alt="intro video thumbnail">
                  <div class="card-body">
                      <h4 class="card-text text-center text-muted">Option2 Thumbnail</h4>
                     
                  </div>
              </div>
              <br>
          </div>
            <div class="col-sm-12 col-mb-3 col-md-6">
  
              <div class="card w-80">
                  <img class="card-img-top" width='250px' height='250px' src="<%=doc.o3%>"
                      alt="intro video thumbnail">
                  <div class="card-body">
                      <h4 class="card-text text-center text-muted">Option3 Thumbnail</h4>
                     
                  </div>
              </div>
              <br>
          </div>
            <div class="col-sm-12 col-mb-3 col-md-6">
  
              <div class="card w-80">
                  <img class="card-img-top" width='250px' height='250px' src="<%=doc.o4%>"
                      alt="intro video thumbnail">
                  <div class="card-body">
                      <h4 class="card-text text-center text-muted">Option4 Thumbnail</h4>
                     
                  </div>
              </div>
              <br>
          </div>
     
  </div>
